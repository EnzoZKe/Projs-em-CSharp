@model List<Tarefa>

<h1>Lista de Tarefas</h1>
<table class="table">
    <thead>
        <tr>
            <th>Tarefa</th>
            <th>Concluida</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Descricao</td>
                <td>@(tarefa.Concluida == true ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@tarefa.ID" class="btn btn-outline-success">EDITAR</a>
                    <a asp-action="Deletar" asp-route-id="@tarefa.ID" class="btn btn-outline-danger">DELETAR</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Adicionar" class="btn btn-outline-success">Adicionar nova tarefa</a>


